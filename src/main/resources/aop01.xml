<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">

    <bean id="helloWorldImpl1" class="com.aop.frame.jdkdl.HelloWorldImpl1"/>
    <bean id="helloWorldImpl2" class="com.aop.frame.jdkdl.HelloWorldImpl2"/>
    <bean id="timeHandler" class="com.aop.frame.jdkdl.TimeHandler"/>
    <bean id="logHandler" class="com.aop.frame.jdkdl.LogHandler"/>

    <aop:config>
        <aop:aspect id="time" ref="timeHandler" order="2">
            <aop:pointcut id="addTime" expression="execution(* com.aop.frame.jdkdl.HelloWorld.*(..))"/>
            <aop:before method="printTime" pointcut-ref="addTime"/>
            <aop:after method="printTime" pointcut-ref="addTime"/>
        </aop:aspect>
        <aop:aspect id="log" ref="logHandler" order="1">
            <aop:pointcut id="printLog" expression="execution(* com.aop.frame.jdkdl.HelloWorld.*(..))"/>
            <aop:before method="logBefore" pointcut-ref="printLog"/>
            <aop:after method="logAfter" pointcut-ref="printLog"/>
        </aop:aspect>
    </aop:config>
</beans>
